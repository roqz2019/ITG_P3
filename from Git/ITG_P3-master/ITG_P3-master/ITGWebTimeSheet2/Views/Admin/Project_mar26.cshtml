@model IEnumerable<ITGWebTimeSheet2.Models.ProjectModule>
@{
    ViewBag.Title = "Project";
    Layout = "~/Views/_LayoutInside.cshtml";
}

<div class="app-content">
    <div class="app-title">
        <div>
            <h1><i class="fa fa-pie-chart "></i> Projects</h1>

        </div>
        <ul class="app-breadcrumb breadcrumb">
            <li class="breadcrumb-item"><i class="fa fa-home fa-lg"></i></li>
            <li class="breadcrumb-item"><a href="#">Projects</a></li>
        </ul>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="tile">
                <div class="tile-body">
                    <div class="table-responsive">
                        @using (Html.BeginForm("AddProject", "Admin", new { ReturnUrl = ViewBag.ReturnUrl },
             FormMethod.Post, new { @class = "row" }))
                        {
                            @Html.AntiForgeryToken()


                            <div class="form-group col-md-3">
                                <!-- <label>Fullname</label>
                                <input class="form-control" type="text" placeholder="" />-->
                                <label>Project Name</label>
                                <input class="form-control" type="text" placeholder="Project Name" name="name" />
                            </div>
                            <div class="form-group col-md-3">
                                <label>&nbsp; &nbsp;</label>
                                <button class="btn btn-primary form-control" type="submit" name="submit"><i class="fa fa-fw fa-lg fa-check-circle"></i>Add</button>
                            </div>


                        }


                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-md-12">
            <div class="tile">
                <h3 class="tile-title">Staff List</h3>
                <div class="tile-body">
                    <div class="table-responsive">
                        <table class="table table-hover table-bordered" id="sampleTable">
                            <thead>
                                <tr>
                                    <th>Project Name</th>
                                  
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {

                                    <tr class="record">
                                        <td>@Html.DisplayFor(modelItem => item.name)</td>
                                       
                                        <td>
                                            <a href="@Url.Action("EditProject", "Admin", new { id = item.id })" id="@Html.DisplayFor(modelItem => item.id)" data-toggle="tooltip" title="Edit"><i class="fas fa-edit"></i></a>
                                            <a href="#" id="@Html.DisplayFor(modelItem => item.id)" class="delproject"><i class="fas fa-times"></i></a>
                                        </td>



                                    </tr>

                                }



                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
