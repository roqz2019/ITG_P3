@model IEnumerable<ITGWebTimeSheet2.Models.TaskManModule>
@{
    ViewBag.Title = "TaskManager";
    Layout = "~/Views/_LayoutInside.cshtml";
}

<div class="app-content">
    <div class="app-title">
        <div>
            <h1><i class="fa fa-tasks"></i> Task Manager</h1>

        </div>
        <ul class="app-breadcrumb breadcrumb">
            <li class="breadcrumb-item"><i class="fa fa-home fa-lg"></i></li>
            <li class="breadcrumb-item"><a href="#">Task Manager</a></li>
        </ul>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="tile">
                <div class="tile-body">
                    <div class="table-responsive">
                        @using (Html.BeginForm("AddTask", "Admin", new { ReturnUrl = ViewBag.ReturnUrl },
              FormMethod.Post, new { @class = "row" }))
                        {
                            @Html.AntiForgeryToken()


                            <div class="form-group col-md-3 ">
                                <label for="exampleSelect1">Select Customer</label>
                                <select class="form-control" id="exampleSelect1" name="a">

                                    <option value="">Please Select</option>
                                    <option value="customer1">Customer 1</option>
                                    <option value="customer1">Customer 2</option>


                                </select>
                            </div>



                            <div class="form-group col-md-3 ">
                                <label for="exampleSelect2">Select Category</label>
                                <select class="form-control" id="exampleSelect2" name="a">

                                    <option value="">Please Select</option>
                                    <option value="customer1">Project</option>
                                    <option value="customer1">Sick</option>
                                    <option value="customer1">Holiday</option>


                                </select>
                            </div>
                            <div class="form-group col-md-3">
                                <label for="exampleSelect2">&nbsp;</label>
                                <select class="form-control" id="exampleSelect2" name="a">

                                    <option value="">Open</option>
                                    <option value="customer1">Closed</option>



                                </select>
                            </div>
                            <div class="form-group col-md-3">
                                <label>Select Date</label>
                                <input class="form-control" id="datepicker" type="text" />
                            </div>



                        }


                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-md-12">
            <div class="tile">

                <div class="tile-body">
                    <div class="table-responsive">
                        <div class="wrapper2">
                            <div class="row2">


                                <div class="form-group col-md-2 ">

                                    <div class="row">
                                        <div class="form-group col-md-2 ">

                                        </div>

                                        <div class="form-group col-md-10 div_head">
                                            <span class="span_head">Customer Name</span>
                                        </div>

                                    </div>

                                      

                                


                                </div>
                                <div class="form-group col-md-2  ">
                                    <div class="div_head">
                                        <span class="span_head">Project Name</span>
                                    </div>
                                   
                                </div>
                                <div class="form-group col-md-1 ">

                                    <div class="div_head">
                                        <span class="span_head">Staff Name</span>
                                    </div>
                                   
                                </div>
                                <div class="form-group col-md-2 ">
                                    <div class="div_head">
                                        <span class="span_head">Description</span>
                                    </div>
                                 </div>




                                <div class="form-group col-md-2">
                                    <div class="div_head">
                                        <span class="span_head">Status</span>
                                    </div>
                                    
                                </div>

                                <div class="form-group col-md-3 ">
                                    <div class="row">
                                        <div class="form-group col-md-4 div_head">
                                            <span class="span_head">Est</span>
                                        </div>
                                        <div class="form-group col-md-4 div_head">
                                            <span class="span_head">Act</span>

                                        </div>
                                        <div class="form-group col-md-4">

                                        </div>

                                    </div>
                                       


                                  
                                </div>

                            </div>

                            @foreach (var item in Model)
                            {
                                <div class="row">


                                    <div class="form-group col-md-2 ">

                                        <div class="row">

                                            <div class="form-group col-md-2">
                                                <label>&nbsp;</label>
                                                <a href="#" id="remove_@Html.DisplayFor(modelItem => item.id)" class="remove_field2" style="margin-top:25px;"><i class="fas fa-minus-circle fa-2x"></i></a>
                                            </div>

                                            <div class="form-group col-md-10">
                                                <span id="cust_@Html.DisplayFor(modelItem => item.id)">@Html.DisplayFor(modelItem => item.cust)</span>
                                            </div>

                                        </div>


                                    </div>
                                    <div class="form-group col-md-2 ">
                                        <span id="proj_@Html.DisplayFor(modelItem => item.id)">@Html.DisplayFor(modelItem => item.proj)</span>
                                    </div>
                                    <div class="form-group col-md-1 ">
                                        <span id="staff_@Html.DisplayFor(modelItem => item.id)">@Html.DisplayFor(modelItem => item.staff)</span>
                                    </div>
                                    <div class="form-group col-md-2">
                                        <label>&nbsp;</label>
                                        <textarea id="description_@Html.DisplayFor(modelItem => item.id)" class="autoExpand form-control" rows="1" data-min-rows="1" placeholder="description" name="description">@Html.DisplayFor(modelItem => item.description)</textarea>
                                    </div>




                                    <div class="form-group col-md-2 ">
                                        <span id="status_@Html.DisplayFor(modelItem => item.id)">@Html.DisplayFor(modelItem => item.status)</span>
                                    </div>

                                    <div class="form-group col-md-3 ">
                                        <div class="row">
                                            <div class="form-group col-md-4">
                                                <span id="est_@Html.DisplayFor(modelItem => item.id)">@Html.DisplayFor(modelItem => item.esthours)</span>
                                            </div>
                                            <div class="form-group col-md-4">
                                                <span id="act_@Html.DisplayFor(modelItem => item.id)">@Html.DisplayFor(modelItem => item.acthours)</span>

                                            </div>
                                            <div class="form-group col-md-4">
                                                <label>&nbsp;</label>
                                                <button id="submit_@Html.DisplayFor(modelItem => item.id)" class="btn btn-primary form-control" type="submit" name="submit"><i class="fa fa-fw fa-lg fa-check-circle"></i></button>

                                            </div>


                                        </div>
                                    </div>

                                </div>
                            }



                        </div>
                        <a href="#" class="add_fields2" style="margin-top:25px;"><i class="fas fa-plus-circle fa-2x"></i></a>

                    </div>
                </div>
            </div>
        </div>
    </div>

</div>  <!-- old main-->
